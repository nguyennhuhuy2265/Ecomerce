<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary">

    <!-- Thanh tìm kiếm và các nút -->
    <LinearLayout
        android:id="@+id/layoutSearchBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Ô tìm kiếm -->
        <androidx.cardview.widget.CardView
            android:id="@+id/searchBarCardView"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="2dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Icon tìm kiếm -->
                <ImageView
                    android:id="@+id/imgSearch"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_search"
                    app:tint="@color/gray_dark" />

                <!-- Ô nhập tìm kiếm -->
                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="Tìm kiếm trên Selly"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColor="#212121"
                    android:textColorHint="#9E9E9E"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Nút giỏ hàng -->
        <FrameLayout
            android:id="@+id/layoutCart"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/imgCart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:contentDescription="Giỏ hàng"
                android:src="@drawable/ic_cart"
                app:tint="@color/primary_dark" />

            <!-- Badge số lượng sản phẩm trong giỏ -->
            <TextView
                android:id="@+id/tvCartBadge"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/badge_circle_background"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Nút tin nhắn -->
        <FrameLayout
            android:id="@+id/layoutMessage"
            android:layout_width="48dp"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/imgMessage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:contentDescription="Tin nhắn"
                android:src="@drawable/ic_chat"
                app:tint="@color/primary_dark" />

            <!-- Badge số lượng tin nhắn mới -->
            <TextView
                android:id="@+id/tvMessageBadge"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/badge_circle_background"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>