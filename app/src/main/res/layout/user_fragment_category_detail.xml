<!-- File: app/src/main/res/layout/fragment_category_detail.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Tiêu đề danh mục -->
    <TextView
        android:id="@+id/tvCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Tên danh mục"/>

    <!-- Mô tả danh mục -->
    <TextView
        android:id="@+id/tvCategoryDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvCategoryName"
        tools:text="Mô tả chi tiết về danh mục này"/>

    <!-- RecyclerView để hiển thị sản phẩm trong danh mục -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategoryProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        app:layout_constraintTop_toBottomOf="@id/tvCategoryDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/user_item_product" />
</androidx.constraintlayout.widget.ConstraintLayout>